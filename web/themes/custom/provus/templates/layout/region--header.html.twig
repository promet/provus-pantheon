/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% embed "@organisms/site/site-header/site-header.twig" %}
  {% block header__navigation %}
    {% embed "@organisms/navigation/navigation.twig" with {
      logo_link__url: url('<front>'),
      header__logo_alt: site_name ~ ' Logo -- Home',
      header__logo_src: relative_logo_url
    } %}
      {% block header__menu %}
        {{ elements.mainnavigation_2 }}
      {% endblock %}
      {% block header__search %}
        {% include "@molecules/form/search/search-bar.twig" with {
          search_bar__action: '/search',
          search_bar__keys: 'keys',
          search_bar__placeholder_text: search_placeholder,
          search_bar__options: search_options,
        } %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}

{% block content %}
  {{ elements.provus_breadcrumbs }}
  {{ elements.provus_messages }}
{% endblock %}
