  {# Set classes #}
  {% set menu_class = 'social-menu' %}
  {% set social_menu_items = [
      {
        "title": "Connect on Facebook",
        "url": "https://www.facebook.com/prometsource",
        "icon": "facebook"
      },
      {
        "title": "Connect on Twitter",
        "url": "https://twitter.com/prometsource",
        "icon": "twitter"
      },
      {
        "title": "Connect on Youtube",
        "url": "https://www.youtube.com/user/prometsource",
        "icon": "youtube"
      },
      {
        "title": "Connect with RSS",
        "url": "/rss",
        "icon": "rss"
      }
    ]
  %}

  {# List #}
  <h2>Follow Us</h2>
  {% embed "@atoms/lists/ul.twig" with {
    ul_base_class: menu_class,
    ul_modifiers: menu_modifiers,
    ul_blockname: menu_blockname
  } %}
    {% block list_content %}
      {% for item in social_menu_items %}
        {% embed "@atoms/lists/_list-item.twig" with {
          li_base_class: 'item',
          li_modifiers: item_modifiers,
          li_blockname: menu_class,
        } %}
          {% block list_item_content %}
            {% embed "@atoms/links/link/link.twig" with {
              link_url: item.url,
              link_base_class: 'link',
              link_modifiers: item_modifiers,
              link_blockname: menu_class,
            } %}
              {% block link_content %}
                <span class="visually-hidden">{{item.title}}</span>
                <div class="ico-social-footer {{item.icon}}"></div>
              {% endblock %}
            {% endembed %}
          {% endblock %}
        {% endembed %}
      {% endfor %}
    {% endblock %}
  {% endembed %}
