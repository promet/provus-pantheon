{% set numbergroup__base_class = 'd-form' %}

<div {{ bem(numbergroup__base_class) }}>
  <div {{ bem('inner', [], numbergroup__base_class) }}>

    {# form #}
    <div class="d-form-wrapper">

      <h2 class="title">{{ title }}</h2>

      <div class="form-body">
        {{ form__body }}
      </div>

      <div class="d-form-inputs">
        {% block input__text %}
          {% include "@atoms/forms/textfields/textfields.twig" %}
        {% endblock %}
