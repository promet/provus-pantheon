{#
 # Available variables:
 # - icon__location - the google material icon machine name.
 #
 # - card__link__text - the content of the link component.
 # - card__link__url - the url the link should link to.
 # - card__link__modifiers - array of modifiers to add to the base classname of the link.
 #}
{% set card__base_class = 'info-filelink' %}

<div {{ bem(card__base_class, card__modifiers, card__blockname, card__extra_classes) }}>
{# Content #}
  <div {{ bem('content', card__content__modifiers, card__base_class) }}>
    <div {{ bem('content-left', card__content__modifiers, card__base_class) }}>
      <div class="ico-filelink"><span class="material-icons" aria-hidden="true">{{ filelink__icon }}</span></div>
    </div>

    <div {{ bem('content-right', card__content__modifiers, card__base_class) }}>
      {# Link #}
      {% if filelink__link__url %}
        {% include "@atoms/links/link/link.twig" with {
          "link_content": filelink__link__text,
          "link_url": filelink__link__url,
          "link_base_class": item_base_class|default(menu_class ~ 'info-filelink__link'),
        } %}
      {% endif %}
    </div>
  </div>
</div>
