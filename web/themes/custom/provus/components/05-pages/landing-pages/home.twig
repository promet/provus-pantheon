{% set page_layout_modifier = 'full' %}

{% embed "@templates/full-width.twig" %}
  {% block page_preheader %}
    {% include "@molecules/alerts/alerts.twig" with {
      'title': 'Our COVID-19 Alert',
      'description': 'Stay tuned for updates'
    } %}
  {% endblock %}
  {% block page_precontent %}
  {% endblock %}
  {% block page_content %}
    <!-- Layout Builder classes -->
    <div class="layout layout--onecol">
      <div class="layout__region layout__region--content">

        <!-- Banner -->
        {% block banner %}
          {% include "@organisms/banner/banner.twig" %}
        {% endblock %}

        {% block content_c3 %}
          {% include "@organisms/group/carousel/3-item/carousel-3-items.twig" with {
            'carousel_heading': 'Provus Link Blocks',
            'content': c3.content,
            }
          %}
        {% endblock %}

        <!-- 4 Card Featured Group -->
        {% block content_c4 %}
          {% include "@organisms/group/4-card-featured-group/4-card-featured-group.twig" with {
            'title': 'News Featured',
            'card__image__src': c4.card__image__src,
            'card__image__alt': c4.card__image__alt,
            'card__image__output_image_tag': true,
            'card__heading': c4.card__heading,
            'card__date': c4.card__date,
            'card__body': c4.card__body,
            'card__button__text': c4.card__button__text,
            'card__button__url': c4.card__button__url,
            'card__link__url': c4.card__link__url,
            'content': c4.content,
            }
          %}
        {% endblock %}

        <!-- By The Numbers -->
        {% block content_btn %}
          {% include "@organisms/group/by-the-numbers/by-the-numbers.twig" with {
            'label': 'Highlights By the Numbers',
            'content': btn.content,
            }
          %}
        {% endblock %}

        <!-- Multi Card -->
        {% block content_cm %}
          {% include "@organisms/group/carousel/multicard/multicard.twig" with {
            'multicard_heading': 'Quicklinks',
            'content': cm.content,
            }
          %}
        {% endblock %}

        <!-- Tabs -->
        {% block content_tabbed %}
          {% include "@organisms/group/tabbed/tabbed_quicklist.twig" with {
            'res': res,
            'topics': topics,
          %}
        {% endblock %}

        <!-- Colum Row -->
        {% block content_cr %}
          {% include "@organisms/group/column-row/column-row.twig" with {
            'title': 'Upcoming Events',
            'content': cr.content,
            'card__button__url': cr.card__button__url,
            'card__button__text': cr.card__button__text,
            'card__link__url': cr.card__link__url,
            }
          %}
        {% endblock %}
      </div>
    </div>
    {% block page_postcontent %}
    {% endblock %}
  {% endblock %}
{% endembed %}
